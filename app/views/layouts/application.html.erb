<!DOCTYPE html>
<html>
<head>
  <title>VolosGeist</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>
</head>
<body>
<%= yield %>

</body>
<script>
    function initialize() {
        var myLatlng = new google.maps.LatLng(32.270597, -64.794449);
        var mapOptions = {
            zoom: 10,
            center: myLatlng
        }
        var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

        var marker = new google.maps.Marker({
            position: myLatlng,
            map: map,
            title: 'Hello World!'
        });
    }

    google.maps.event.addDomListener(window, 'load', initialize);
    areas = '<%= j areas_url %>';
    window.myjson = $(document).ready(function() {
        return $.getJSON(areas, function(json) {
            return window.myjson = json;
        });
    });


</script>

</html>
